<Window x:Class="Modul_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modul_2"
        mc:Ignorable="d"
        Title="Главное окно" Height="750" Width="1500" FontSize="20">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <TextBlock  DockPanel.Dock="Right" Margin="5">
                <Run Text="Добро пожаловать, "/>
                <Run Name="RunUserName"/>
            </TextBlock>
            <Button Content="Выход" Click="ExitButton" Margin="5"/>
            <Grid/>
        </DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top"
                    Name="PanelFind"
                    Visibility="Collapsed">
            <TextBlock Name="BoxSearch" Width="150"/>
            <Label Content="Поиск"/>
            
            <RadioButton Name="UpRadio" Content="по возрастанию" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <RadioButton Name="DownRadio" Content="по убыванию" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            
            <ComboBox Name="ProducersComboBox" Width="150" SelectedIndex="0">
                <ComboBoxItem>
                    Все поставщики
                </ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal"
                        Name="PanelCRUD"
                        Visibility="Collapsed">
                <Button Name="AddProductButton" Content="Добавить товар" Click="AddProductButtonClick"/>
                <Button Name="DelProductButton" Content="Удалить товар" Click="DelProductButtonClick"/>
            </StackPanel>
            <Button Name="OpenOrdersButton" Content="Список заказов" Click="OpenOrdersButtonClick"
                    Visibility="Collapsed"/>
        </StackPanel>
        <StackPanel>
            <ListBox Name="BoxProducts"
                     SelectionChanged="BoxProducts_SelectionChanged"
                     Height="650"/>
        </StackPanel>
    </DockPanel>
</Window>
