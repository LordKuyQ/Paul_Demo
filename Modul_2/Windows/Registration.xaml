<Window x:Class="Modul_2.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Modul_2"
        mc:Ignorable="d"
        Title="Регистрация" Height="450" Width="450">
    <DockPanel DockPanel.Dock="Top">
        <!--<DockPanel DockPanel.Dock="Top">
            <Button DockPanel.Dock="Left" x:Name="BackButton" Content="Отмена" Click="Back" Margin="5"/>
            <Grid/>
        </DockPanel>-->
        <StackPanel DockPanel.Dock="Top" Orientation="Vertical" Margin="10">
            <TextBlock Text="Registration" FontSize="35" HorizontalAlignment="Center"/>
            <TextBlock Text="Fio" FontSize="25"/>
            <TextBox Name="Fio" FontSize="20"/>
            <TextBlock Text="Login" FontSize="25"/>
            <TextBox Name="Login" FontSize="20"/>
            <TextBlock  FontSize="25" Text="Password"/>
            <TextBox Name="Password" FontSize="20"/>
            <StackPanel>
                <Button Name="RegisterButton" Content="Сохранить" Click="RegisterClick"/>
                <Button DockPanel.Dock="Left" x:Name="BackButton" Content="Отмена" Click="Back"/>
            </StackPanel>
        </StackPanel>
        <Grid/>
    </DockPanel>
</Window>
